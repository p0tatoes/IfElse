<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="Buy something to eat."
        app:layout_constraintStart_toStartOf="@+id/storyTxt"
        app:layout_constraintTop_toBottomOf="@+id/storyTxt" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_marginStart="52dp"
        android:text="Keep the money."
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1" />

    <TextView
        android:id="@+id/storyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="You have only have â‚±20 in your pocket.\n\nYou are feeling hungry and can't concentrate on your classes.\n\nWhat do you do?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>